@using Microsoft.AspNetCore.Identity

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager


@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post">
        <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage"><span class="hidden-xs text-uppercase">Hello @UserManager.GetUserAsync(User).Result.Reporter.Name!</span></a>
        <button type="submit" class="btn-link"><i class="fa fa-sign-out"></i> <span class="hidden-xs text-uppercase">Log out</span></button>
    </form>

}
else
{

    <li class="nav-item">
        <a class="nav-link text-dark float-right" asp-area="" asp-controller="Identity" asp-action="Login">Sign in</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark float-right" asp-area="" asp-controller="Identity" asp-action="Register">Register</a>
    </li>
}